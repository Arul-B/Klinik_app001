<script>

$('#dataTable').on('click', '.positive', function(){
    let id = $(this).data('id')
    $('#status-modal').modal('show')
    $('.id').val(id)
    $('.status').val("POSITIF")
  })
$('#dataTable').on('click', '.negative', function(){
    let id = $(this).data('id')
    $('#status-modal').modal('show')
    $('.id').val(id)
    $('.status').val("NEGATIF")
})
$('#dataTable').on('click', '.ditemukan', function(){
    let id = $(this).data('id')
    $('#gejala-modal').modal('show')
    $('.id').val(id)
    $('.gejala').val("DITEMUKAN")
  })
$('#dataTable').on('click', '.tidak_ditemukan', function(){
    let id = $(this).data('id')
    $('#gejala-modal').modal('show')
    $('.id').val(id)
    $('.gejala').val("TIDAK DITEMUKAN")
})
</script>
