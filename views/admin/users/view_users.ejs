<script>
    $('#dataTable').on('click', '.button-update-users', function(){
      let id = $(this).data('id')
      let name = $(this).data('name')
      let email = $(this).data('email')
      let role = $(this).data('role')
      $('#edit-modal-users').modal('show')
      $('.id').val(id)
      $('.name').val(name)
      $('.email').val(email)
      $('.role').val(role)
      var dd = document.getElementsByName('role');
        for (var i = 0; i < dd.options.length; i++) {
            if (dd.options[i].text === role) {
                dd.selectedIndex = i;
                break;
            }
        }
    })
  </script>